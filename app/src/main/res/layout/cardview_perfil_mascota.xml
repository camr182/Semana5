<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_de_mi_cardview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/imgVFotoMascotaCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/perro"
            android:layout_gravity="center_horizontal"
            android:background="#1828d6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvCalificacionCv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telefono"
                android:textSize="@dimen/nombre_cardview"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_toLeftOf="@+id/imgVImagenCalificacionCv" />

            <ImageView
                android:id="@+id/imgVImagenCalificacionCv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hueso_lleno"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tvCalificacionCv" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>